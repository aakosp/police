<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆形图片 -->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
        <attr name="round" format="integer"></attr>
    </declare-styleable>

    <!-- 图片文字按钮 -->
    <declare-styleable name="imagetextbutton">
        <attr name="img_src" format="reference" />
        <attr name="img_width" format="dimension" />
        <attr name="img_height" format="dimension" />
        <attr name="text_src" format="reference" />
        <attr name="text_color" format="reference" />
        <attr name="text_size" format="dimension" />
        <attr name="space" format="integer"></attr>
    </declare-styleable>

    <!-- viewpager -->
    <declare-styleable name="widgetviewpager">
        <attr name="cursor_color" format="reference" />
        <attr name="tabs" format="reference" />
        <attr name="tabs_color" format="reference" />
        <attr name="tabs_selected_color" format="reference" />
        <attr name="tab_text_size" format="dimension" />
        <attr name="tabs_height" format="dimension" />
        <attr name="tab_cursor_visible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopNavigationBar">
        <attr name="barTitleBackground" format="reference" />
        <attr name="titleText" format="reference|string" />
        <attr name="titleBackground" format="reference" />
        <attr name="leftButtonBackground" format="reference" />
        <attr name="leftButtonText" format="reference|string" />
        <attr name="leftButtonVisible" format="boolean" />
        <attr name="rightButtonBackground" format="reference" />
        <attr name="rightButtonText" format="reference|string" />
        <attr name="rightButtonVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ItemHorizontal">
        <attr name="ItemHorizontal_text" format="reference|string" />
        <attr name="ItemHorizontal_text_size" format="reference|dimension" />
        <attr name="ItemHorizontal_text_color" format="reference|color" />
        <attr name="ItemHorizontal_img_width" format="reference|dimension" />
        <attr name="ItemHorizontal_img_height" format="reference|dimension" />
        <attr name="ItemHorizontal_img_src" format="reference" />
        <attr name="ItemHorizontal_arrow_visible" format="boolean" />
        <attr name="ItemHorizontal_padding" format="reference|dimension"/>
    </declare-styleable>

    <string-array name="news_columns">
        <item>警务新闻</item>
        <item>警队风采</item>
        <item>预警信息</item>
        <item>安防攻略</item>
    </string-array>

    <string-array name="guide_columns">
        <item>户政</item>
        <item>治安</item>
        <item>交通</item>
        <item>消防</item>
        <item>出入境</item>
    </string-array>

    <string-array name="sex_columns">
        <item>男</item>
        <item>女</item>
    </string-array>

</resources>