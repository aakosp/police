<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_office_info_divider"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:textColor="@color/news_title"
        android:textColorHint="@color/news_title"
        android:textSize="@dimen/newstitle_title_size" />

    <EditText
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:hint="@string/info"
        android:lines="7"
        android:minHeight="@dimen/feedback_info_height"
        android:textColorHint="@color/news_title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding">

        <TableRow>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/newstitle_img_height"
                android:scaleType="centerInside"
                android:src="@drawable/add" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shiming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_item_img_height"
            android:layout_weight="1"
            android:background="@color/shiming"
            android:text="@string/shiming"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/default_padding"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/niming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_item_img_height"
            android:layout_weight="1"
            android:text="@string/anonymous"
            android:textColor="@color/niming" />

    </LinearLayout>

</LinearLayout>
