<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_office_info_divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_office_info_divider"
        android:orientation="vertical">

        <com.psb.ui.widget.TopNavigationBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="@string/feedback" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@color/white"
            android:hint="@string/title"
            android:padding="@dimen/default_padding"
            android:textColor="@color/news_title"
            android:textColorHint="@color/news_title"
            android:textSize="@dimen/newstitle_title_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding" />

        <EditText
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="@string/info"
            android:lines="6"
            android:minHeight="@dimen/feedback_info_height"
            android:padding="@dimen/default_padding"
            android:textColorHint="@color/news_title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding">

            <TableRow>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="@dimen/item_img_size"
                    android:layout_height="@dimen/item_img_size"
                    android:layout_margin="@dimen/map_padding"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:minHeight="@dimen/newstitle_img_height"
                    android:scaleType="centerInside"
                    android:src="@drawable/add" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding">

        <Button
            android:id="@+id/shiming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_item_img_height"
            android:layout_weight="1"
            android:background="@color/shiming"
            android:text="@string/shiming"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/default_padding"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/niming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_item_img_height"
            android:layout_weight="1"
            android:background="@color/niming"
            android:text="@string/anonymous"
            android:textColor="@color/white" />
    </LinearLayout>


    <Button
        android:id="@+id/login_niming"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_item_img_height"
        android:layout_alignParentBottom="true"
        android:background="@color/niming"
        android:text="@string/anonymous"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>
