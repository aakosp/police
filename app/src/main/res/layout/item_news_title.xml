<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/newstitle_img_width"
        android:layout_height="@dimen/newstitle_img_height"
        android:scaleType="centerCrop"
        android:src="@drawable/yuanbao_img" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:textColor="@color/news_title"
        android:textSize="@dimen/newstitle_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="16dp"
        android:src="@drawable/arrow_more" />

</LinearLayout>
