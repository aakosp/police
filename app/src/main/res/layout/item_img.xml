<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/police_img_width"
    android:layout_height="@dimen/police_img_width">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size"
        android:padding="@dimen/item_img_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:src="@drawable/del"
        android:visibility="gone" />

</FrameLayout>
