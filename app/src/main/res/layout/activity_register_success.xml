<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_item_img_height"
        android:background="@drawable/success"
        android:minHeight="@dimen/newstitle_img_width"
        android:minWidth="@dimen/newstitle_img_width"
        android:scaleType="centerInside" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        android:layout_marginTop="@dimen/newstitle_img_height"
        android:background="@color/default_blue_color"
        android:padding="@dimen/default_padding"
        android:text="@string/goto_login"
        android:textColor="@color/white"
        android:textSize="@dimen/news_title_size" />

</LinearLayout>
